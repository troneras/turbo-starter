{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cms/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cms/*": ["../../packages/*"]
    }
  },
  "include": [
    "src/**/*",
    "e2e/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    "coverage"
  ]
}
