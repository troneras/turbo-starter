{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@cms/tsconfig/node.json",
  "compilerOptions": {
    "paths": {
      "@cms/*": ["../*/index.ts"]
    }
  },
  "include": [
    "schema/**/*",
    "migrations/**/*",
    "seed.ts",
    "index.ts",
    "client.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    "drizzle"
  ]
}
