{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "types": ["vite/client"],
    
    // Stricter settings for React apps
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/e2e/**",
    "**/api/**",
    "**/server/**",
    "**/*.config.js",
    "**/*.config.ts",
    "**/vite.config.ts.timestamp-*"
  ]
}